<merge xmlns:android="http://schemas.android.com/apk/res/android">
	
    <!-- Merge in the grey background -->
    <include layout="@layout/gd_common_background_grey"/>

	<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1.0">
	
	    <!-- Common header elements -->
        <include layout="@layout/gd_common_powered_by"/>
        <include layout="@layout/gd_common_navbar"/>
        <include layout="@layout/gd_common_spacer"/>
	    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_gravity="center|top"
            android:gravity="center_horizontal"
            android:layout_weight="0.95">
        
		    <TextView
		        android:id="@+id/com_good_gd_welcome_view_text"
		        android:layout_width="300dp"
		        android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
		        android:textColor="#ffffff"
		        android:layout_marginTop="18dp"/>
		    
	        <Button
	            android:id="@+id/com_good_gd_welcome_view_next_button"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            style="@style/GDUIDefaultThemeButton"
	            android:width="160dp"
	            android:layout_marginTop="14dp"/>
        </LinearLayout>
        
    </LinearLayout>
</merge>
